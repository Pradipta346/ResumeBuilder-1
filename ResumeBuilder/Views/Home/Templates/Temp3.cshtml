
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Template-3 | Modern</title>
    <link rel="stylesheet" href="~/Content/temp3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/script3.js"></script>
</head>
<body>
    <div class="buttons">
        <a href="@Url.Action("Resumetemplates", "Home")"><button id="new-templateButton">New Template</button></a>
        <a href="@Url.Action("Form", "Home")"><button id="change-detailButton">Change Details</button></a>
    </div><br>
    <div class="resume-container">
        <div class="left-section">
            <div class="left-top">
                <h1>
                    <span id="first"></span>
                    <span id="middle"></span>
                    <span id="last"></span>
                </h1>
                <h2 id="title"></h2>
                <p id="address">
                    <i class="fas fa-map-marker-alt"></i> <span id="address-text"></span>
                </p>
                <p id="email">
                    <i class="fas fa-envelope"></i> <span id="email-text"></span>
                </p>
                <p id="cell">
                    <i class="fas fa-phone"></i> <span id="cell-text"></span>
                </p>
                <p id="linkedin">
                    <i class="fa-brands fa-linkedin"></i> <a href="#" class="plain-link" id="linkedin-link"></a>
                </p>
                <p id="github">
                    <i class="fa-brands fa-github"></i> <a href="#" class="plain-link" id="github-link"></a>
                </p>
            </div>
            <div class="left-bottom">
                <div class="skills" id="skillsSection">
                    <h3>Skills</h3>
                    <ul id="skills">
                        <!-- Skills will be appended here -->
                    </ul>
                </div>
                <div class="languages" id="languageSection">
                    <h3>Languages</h3>
                    <ul id="langs">
                        <!-- Languages will be appended here -->
                    </ul>
                </div>
                <div class="hobby" id="hobbiesSection">
                    <h3>Hobbies</h3>
                    <ul id="hobbies">
                        <!-- Hobbies will be appended here -->
                    </ul>
                </div>
            </div>
        </div>
        <div class="right-section">
            <div class="summary" id="summarySection">
                <h3>Summary</h3>
                <p  id="summaryContainer"><!-- Summary will be appended here --></p>
            </div>
            <div class="experience" id="experienceSection">
                <h3>Experience</h3>
                <div id="jobs"></div>
                <!-- Experience will be appended here -->
            </div>
            <div class="education" id="educationSection">
                <h3>Education</h3>
                <div id="education"></div>
                <!-- Education will be appended here -->
            </div>
            <div class="certifications" id="certificatesSection">
                <h3>Certifications</h3>
                <div id="certifications">
                    <!-- Projects will be appended here -->
                </div>
            </div>
            <div class="projects" id="projectsSection">
                <h3>Projects</h3>
                <div id="projects">
                    <!-- Projects will be appended here -->
                </div>
            </div>
            <div class="achievements" id="achievementsSection">
                <h3>Achievements</h3>
                <div id="achievements">
                    <!-- Achievements will be appended here -->
                </div>
            </div>
        </div>
    </div>
    <div class="buttons">
        <button id="downloadBothButton">Download as PDF</button>
    </div>
</body>
</html>
