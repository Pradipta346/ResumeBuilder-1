@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Template-1 | Modern</title>
    <link id="themeStylesheet" rel="stylesheet" href="~/Content/temp1_css/temp1_default.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <style>
        .color-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin: 0 5px;
            cursor: pointer;
            border: 2px solid transparent;
        }

            .color-circle.selected {
                border-color: black;
            }
    </style>
    <script src="~/Scripts/script1.js"></script>
</head>
<body>
    <nav class="buttons">
        <a href="@Url.Action("Resumetemplates", "Home")"><button id="new-templateButton">New Template</button></a>
        <a href="@Url.Action("Form", "Home")"><button id="change-detailButton">Change Details</button></a>
    </nav>

    <div class="color-selection" style="display: flex; justify-content: center; margin: 20px;">
        <div class="color-circle" data-color="temp1_default" style="background-color: #9c4140;"></div>
        <div class="color-circle" data-color="temp1_blue" style="background-color: blue;"></div>
        <div class="color-circle" data-color="temp1_green" style="background-color: green;"></div>
    </div>

    <div class="container">
        <div class="header"></div>
        <div class="contact-section">
            <div>
                <h1>
                    <span id="first"></span>
                    <span id="middle"></span>
                    <span id="last"></span>
                </h1>
                <h2 id="title"></h2>
            </div>
            <div class="contact-info">
                <p id="address">
                    <i class="fas fa-map-marker-alt"></i> <span id="address-text"></span>
                </p>
                <p id="email">
                    <i class="fas fa-envelope"></i> <span id="email-text"></span>
                </p>
                <p id="cell">
                    <i class="fas fa-phone"></i> <span id="cell-text"></span>
                </p>
                <p id="linkedin">
                    <i class="fa-brands fa-linkedin"></i> <a href="#" class="plain-link" id="linkedin-link"></a>
                </p>
                <p id="github">
                    <i class="fa-brands fa-github"></i> <a href="#" class="plain-link" id="github-link"></a>
                </p>
            </div>
        </div>
        <div class="section" id="summarySection">
            <h3>SUMMARY</h3>
            <div class="content">
                <hr />
                <div id="summaryContainer"></div>
            </div>
        </div>
        <div class="section" id="experienceSection">
            <h3>EXPERIENCE</h3>
            <div class="content">
                <hr />
                <div id="jobs"></div>
            </div>
        </div>
        <div class="section" id="skillsSection">
            <h3>SKILLS</h3>
            <div class="content">
                <hr />
                <div id="skills"></div>
            </div>
        </div>
        <div class="section" id="educationSection">
            <h3>EDUCATION</h3>
            <div class="content">
                <hr />
                <div id="educations"></div>
            </div>
        </div>
        <div class="section" id="certificateSection">
            <h3>CERTIFICATION</h3>
            <div class="content">
                <hr />
                <div id="certificate"></div>
            </div>
        </div>
        <div class="section" id="projectSection">
            <h3>PROJECTS</h3>
            <div class="content">
                <hr />
                <div id="project"></div>
            </div>
        </div>
        <div class="section" id="achievementSection">
            <h3>ACHIEVEMENTS</h3>
            <div class="content">
                <hr />
                <div id="achievement"></div>
            </div>
        </div>
        <div class="section" id="hobbySection">
            <h3>HOBBIES</h3>
            <div class="content">
                <hr />
                <div id="hobby"></div>
            </div>
        </div>
        <div class="footer"></div>
    </div>

    <div class="buttons">
        <button id="downloadBothButton">Download as PDF</button>
    </div>
</body>
</html>
